<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/draculaBackground"
    tools:context=".RecordScores">

    <EditText
        android:id="@+id/number_players_rs"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:background="@color/draculaBackgroundTitle"
        android:ems="10"
        android:fontFamily="@font/roboto_condensed_bold"
        android:gravity="center"
        android:hint="WRITE NUMBER OF PLAYERS HERE"
        android:inputType="number"
        android:textColor="@color/draculaPink"
        android:textColorHighlight="@color/draculaPink"
        android:textColorHint="@color/draculaPink"
        android:textColorLink="@color/draculaPink"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_players_rs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_players_rs" />


</androidx.constraintlayout.widget.ConstraintLayout>